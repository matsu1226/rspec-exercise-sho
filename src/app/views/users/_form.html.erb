<%# model: モデルクラスのインスタンス  "local: true"を省略=> Ajax処理に。 %>
<%# form action="/users" method="post" class="new_user" id="new_user"  %>
<%= form_with(model: @user, local: true) do |f| %>
  <%= render "shared/error_messages" %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-controll" %>
  <%# label for="user_name" %>
  <%# input id="user_name" name="user[name]" type="text" %>
  <%# name="user[name]" => Controllerにてparams[:user][:name]として取り出す %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-controll" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-controll" %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: "form-controll" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>